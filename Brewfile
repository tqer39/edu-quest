# Brewfile for development environment
# Install all dependencies with: brew bundle install
# Note: Node.js is managed by mise, Python is managed by uv

# Core development tools
brew "mise"        # Version manager for multiple languages
brew "just"        # Command runner and task automation
brew "git"         # Version control system
brew "pre-commit"  # Git hooks framework
brew "uv"          # Python package and project manager
brew "rulesync"    # Synchronize repository rules

# Optional: Additional useful tools
# brew "gh"            # GitHub CLI
# brew "jq"            # JSON processor
# brew "yq"            # YAML processor
# brew "tree"          # Directory structure viewer
